{
  "name": "ollama-spielwiese",
  "version": "1.1.1",
  "description": "",
  "main": "src/main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "webpack",
    "start": "npm run build && electron .",
    "pack": "electron-builder --dir",
    "dist": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.nobu.ollama-spielwiese",
    "productName": "Ollama Spielwiese",
    "afterSign": "script/notarize.js",
    "asar": false,
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "src/**/*",
      "vector-db/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "vector-db",
        "to": "vector-db",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "target": "dmg",
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "gatekeeperAssess": false,
      "icon": "./icons/icon.icns"
    },
    "dmg": {
      "format": "UDZO",
      "writeUpdateInfo": false
    },
    "win": {
      "target": "nsis",
      "icon": "./icons/icon.ico"
    }
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Ollama Spielwiese"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NbtKmy/ollama-spielwiese.git"
  },
  "keywords": [],
  "author": "NbtKmy",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/NbtKmy/ollama-spielwiese/issues"
  },
  "homepage": "https://github.com/NbtKmy/ollama-spielwiese#readme",
  "devDependencies": {
    "autoprefixer": "^10.4.22",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^7.1.2",
    "electron": "^35.7.5",
    "electron-builder": "^26.0.12",
    "electron-notarize": "^1.2.2",
    "html-webpack-plugin": "^5.6.4",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.2.0",
    "style-loader": "^4.0.0",
    "tailwindcss": "^3.4.18",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "dependencies": {
    "@langchain/community": "^0.3.57",
    "@langchain/core": "^0.3.79",
    "@langchain/ollama": "^0.2.4",
    "axios": "^1.13.2",
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "faiss-node": "^0.5.1",
    "gray-matter": "^4.0.3",
    "langchain": "^0.3.36",
    "pdfjs-dist": "2.14.305"
  }
}
